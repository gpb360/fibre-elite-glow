# Stripe Configuration - TEST KEYS (Safe for development)
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret
# Get this from your Stripe Dashboard: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Supabase Configuration
# Get these from your Supabase Dashboard: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Application Configuration - Consistent URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ------------------------------------------------------------------
# Supabase MCP Server configuration (Optional)
# ------------------------------------------------------------------
# Project ref (extracted from your project URL)
SUPABASE_PROJECT_REF=your_project_ref_here
# Database password for the primary Postgres user (set in Dashboard → Database → Connection pooling)
SUPABASE_DB_PASSWORD=your_db_password_here
# Region of your Supabase project (check in Project Settings)
SUPABASE_REGION=your_region_here
# Personal access token generated from https://supabase.com/dashboard/account/tokens
SUPABASE_ACCESS_TOKEN=your_access_token_here

# Development Mode
NODE_ENV=development
STRIPE_TEST_MODE=true